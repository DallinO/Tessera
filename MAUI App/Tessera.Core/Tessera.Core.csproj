	  </Content>
	  <Content Include="Components\Pages\Login.razor">
	    <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
	  </Content>
	  <Content Include="Components\Pages\Register.razor">
	    <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
	  </Content>
	  <Content Include="Components\Pages\SelectOrg.razor">
	    <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
	  </Content>
