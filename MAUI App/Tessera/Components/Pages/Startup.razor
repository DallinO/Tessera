@page "/startup"
@inject IAuthService AuthService
@using Tessera.Components.Pages
@using Tessera_Models

@if (!AuthService.IsAuthenticated)
{
    
    <div class="startup-container debug-border-5">
        <div class="startup-header debug-border-4">
            <h1>Tessera Business Manager</h1>
        </div>
        @if (showLogin)
        {
            <Login OnSwitchToRegister="SwitchToRegister"/>
            @* <Login OnLogin="@Login" /> *@
        }
        else
        {
            <Register OnSwitchToLogin="SwitchToLogin" />
        }
    </div>
}

@code {
    bool showLogin = true; // Default to showing login form

    private void SwitchToRegister()
    {
        showLogin = false;
    }

    private void SwitchToLogin()
    {
        showLogin = true;
    }
}
