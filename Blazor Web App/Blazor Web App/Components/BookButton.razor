@namespace Tessera.Web

@inject IBookService Library
@inject NavigationManager Nav

<button class="ts-basic-button" @onclick="OpenDashboard">
    <span class="ts-basic-button-text">Dashboard</span>
    <div class="ts-inner-button-container">
        <button class="ts-inner-button" style="z-index: 2" @onclick="OpenAddMenu">
            <img src="plus_lg.svg" alt="add book" />
        </button>
    </div>
</button>

@code {
    [Parameter] public Action OpenModal { get; set; }

    private void OpenAddMenu()
    {
        OpenModal?.Invoke();
    }

    private void OpenDashboard()
    {
        Nav.NavigateTo($"/b/{Library.BookId}");
    }
}
